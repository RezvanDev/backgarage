datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Brands {
  KIA
  BMW
  Hyundai
  Chevrolet
  Chery
  BYD
  Jetour
  Mercedes
  Lada
  Zeekr
  Lixiang
  Toyota
  Tesla
  Haval
  Leapmotor
  Voyah
}

enum Roles {
  Admin
  User
  Seller
  Manager
}

enum OrderStatus {
  PAYED
  PAYMENT_CONFIRMED
  SENT
  DELIVERED
  CONFIRMED
}

model User {
  id             Int       @id @default(autoincrement())
  nickname       String
  username       String?
  telegramId     BigInt
  phoneNumber    String?
  createdAt      DateTime  @default(now())
  role           Roles     @default(User)
  cars           Car[]
  ordersAsSeller Order[]   @relation("ordersAsSeller")
  ordersAsBuyer  Order[]   @relation("ordersAsBuyer")
  requests       Request[]
  notifications  Brands[]
  cart           Cart?
  partsForSale   Part[]    @relation("partsForSale")
}

model Car {
  id       Int       @id @default(autoincrement())
  image    String?
  brand    Brands
  model    String
  number   String
  ownerId  Int
  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  requests Request[]
  parts    Part[]
}

model Part {
  id           Int      @id @default(autoincrement())
  manufacturer String
  numberOrName String
  price        Float
  new          Boolean
  original     Boolean
  name         String
  image        String?
  cartId       Int?
  cart         Cart?    @relation(fields: [cartId], references: [id])
  sellerId     Int
  seller       User     @relation("partsForSale", fields: [sellerId], references: [id])
  carId        Int
  car          Car      @relation(fields: [carId], references: [id])
  request      Request? @relation(fields: [requestId], references: [id])
  requestId    Int
  orderId      Int?
  order        Order?   @relation(fields: [orderId], references: [id])
}

model Cart {
  id     Int    @id @default(autoincrement())
  parts  Part[]
  price  Float?
  count  Int?
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Order {
  id                Int         @id @default(autoincrement())
  seller            User        @relation("ordersAsSeller", fields: [sellerId], references: [id])
  sellerId          Int
  buyer             User        @relation("ordersAsBuyer", fields: [buyerId], references: [id])
  buyerId           Int
  price             Float
  status            OrderStatus @default(PAYED)
  deliveryDate      DateTime?
  sentDate          DateTime?
  paymentScreenshot String?
  parts             Part[]
  deliveryAddress   String
  phoneNumber       String
}

model Request {
  id                 Int     @id @default(autoincrement())
  name               String
  image              String?
  car                Car     @relation(fields: [carId], references: [id])
  carId              Int
  parts              Part[]
  user               User    @relation(fields: [userId], references: [id])
  userId             Int
  sellerId           Int?
  respondedSellerIds Int[]

  @@index([carId, userId], name: "unique_request")
}
